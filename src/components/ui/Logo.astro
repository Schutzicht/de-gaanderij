---
const { class: className = "", color = "default" } = Astro.props;
---
  <a href="/" class={`group flex items-center gap-4 decoration-none ${className}`}>
  <!-- Modern Geometric Icon -->
  <div class="relative w-10 h-10 bg-slate-900 flex items-center justify-center rounded-sm overflow-hidden group-hover:bg-sea-blue transition-colors duration-300">
      <span class="font-heading font-black text-white text-lg tracking-tighter leading-none">AC</span>
  </div>

  <div class="flex flex-col select-none">
    <span class={`font-heading text-xl md:text-2xl font-bold tracking-tight leading-none uppercase ${color === 'white' ? 'text-white' : 'text-slate-900 group-hover:text-sea-blue transition-colors'}`}>
      Claercamp
    </span>
    <span class={`font-body text-[0.6rem] uppercase tracking-[0.2em] font-medium leading-none mt-1 ${color === 'white' ? 'text-white/60' : 'text-slate-500'}`}>
      Accommodatie
    </span>
  </div>
</a>
