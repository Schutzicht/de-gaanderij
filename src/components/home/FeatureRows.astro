---
import ScrollReveal from '../ui/ScrollReveal.astro';
import ParallaxImage from '../ui/ParallaxImage.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    features: [
      {
        title: "Ruimte & Privacy",
        desc: "Onze appartementen beschikken over een eigen keuken of kitchenette en een privé badkamer. U geniet van volledige privacy en vrijheid tijdens uw verblijf.",
        img: "/images/claercamp/living.webp",
        stat: "Van alle gemakken voorzien"
      },
      {
        title: "Zelfvoorzienend",
        desc: "Accommodatie Claercamp serveert geen ontbijt. Dankzij de eigen keukenfaciliteiten kunt u zelf uw ontbijt bereiden wanneer u maar wilt. Er zijn ook diverse eetgelegenheden in de buurt.",
        img: "/images/claercamp/kitchen_home.webp",
        stat: "Eigen Keuken"
      }
    ]
  },
  en: {
    features: [
      {
        title: "Space & Privacy",
        desc: "Our apartments feature a private kitchen or kitchenette and a private bathroom. You enjoy complete privacy and freedom during your stay.",
        img: "/images/claercamp/living.webp",
        stat: "Fully Equipped"
      },
      {
        title: "Self Catering",
        desc: "Accommodatie Claercamp does not serve breakfast. Thanks to the private kitchen facilities, you can prepare your own breakfast whenever you want. There are also various dining options nearby.",
        img: "/images/claercamp/kitchen_home.webp",
        stat: "Private Kitchen"
      }
    ]
  },
  de: {
    features: [
      {
        title: "Raum & Privatsphäre",
        desc: "Unsere Apartments verfügen über eine eigene Küche oder Kochnische und ein eigenes Bad. Sie genießen während Ihres Aufenthalts absolute Privatsphäre und Freiheit.",
        img: "/images/claercamp/living.webp",
        stat: "Voll ausgestattet"
      },
      {
        title: "Selbstversorgung",
        desc: "Accommodatie Claercamp serviert kein Frühstück. Dank der eigenen Kücheneinrichtungen können Sie Ihr Frühstück zubereiten, wann immer Sie möchten. Es gibt auch verschiedene Restaurants in der Nähe.",
        img: "/images/claercamp/kitchen_home.webp",
        stat: "Eigene Küche"
      }
    ]
  }
};

const t = content[lang] || content.nl;
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {t.features.map((feature, index) => (
      <div class={`flex flex-col md:flex-row items-center gap-12 md:gap-24 mb-32 last:mb-0 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
        
        <!-- Image Side -->
        <div class="w-full md:w-1/2 relative group">
           <ScrollReveal animation={index % 2 === 0 ? 'slide-left' : 'slide-right'} duration={1.2}>
               <div class="relative overflow-hidden rounded-sm aspect-[4/3] md:aspect-[3/4] lg:aspect-[4/3]">
                  <ParallaxImage 
                    src={feature.img} 
                    alt={feature.title} 
                    class="h-full w-full object-cover"
                  />
                  <!-- Stat Badge overlay -->
                  <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-md px-4 py-2 text-sea-blue font-heading font-bold shadow-lg z-10 border border-white/20">
                    {feature.stat}
                  </div>
               </div>
           </ScrollReveal>
        </div>

        <!-- Text Side -->
        <div class="w-full md:w-1/2">
           <ScrollReveal animation="fade-up" delay={0.3}>
               <div class="w-16 h-[2px] bg-dune-sand mb-6"></div>
               <h3 class="text-3xl md:text-5xl font-heading font-light text-slate-900 mb-6 leading-tight">
                 {feature.title}
               </h3>
               <p class="text-lg text-slate-600 font-light leading-relaxed mb-8 max-w-lg">
                 {feature.desc}
               </p>
               <div class="flex items-center text-sm font-bold uppercase tracking-widest text-sea-blue group cursor-pointer">
                  <span class="border-b border-sea-blue pb-1">
                      {lang === 'nl' ? 'Ontdek meer' : lang === 'de' ? 'Mehr entdecken' : 'Discover more'}
                  </span>
               </div>
           </ScrollReveal>
        </div>

      </div>
    ))}

  </div>
</section>
