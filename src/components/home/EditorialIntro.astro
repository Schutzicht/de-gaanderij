---
import ScrollReveal from '../ui/ScrollReveal.astro';
import ParallaxImage from '../ui/ParallaxImage.astro';
import ImageSlider from '../ui/ImageSlider.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    title: "Uniek Overnachten",
    desc: "Accommodatie Claercamp biedt unieke appartementen en gastenkamers in een verbouwde woonboerderij. Geniet van rust, ruimte en privacy. Gelegen in het Friese Rinsumageest, op historische grond.",
    stat1: "9.6",
    stat1Label: "Voortreffelijke Score",
    stat2: "3",
    stat2Label: "Unieke Verblijven"
  },
  en: {
    title: "Unique Stay",
    desc: "Accommodatie Claercamp offers unique apartments and guest rooms in a converted farmhouse. Enjoy peace, space, and privacy. Located in the Frisian Rinsumageest, on historic grounds.",
    stat1: "9.6",
    stat1Label: "Excellent Score",
    stat2: "3",
    stat2Label: "Unique Stays"
  },
  de: {
    title: "Einzigartiger Aufenthalt",
    desc: "Accommodatie Claercamp bietet einzigartige Apartments und Gästezimmer in einem umgebauten Bauernhaus. Genießen Sie Ruhe, Raum und Privatsphäre. Gelegen im friesischen Rinsumageest, auf historischem Boden.",
    stat1: "9.6",
    stat1Label: "Hervorragende Bewertung",
    stat2: "3",
    stat2Label: "Einzigartige Unterkünfte"
  }
};

const t = content[lang] || content.nl;
---

<section class="py-20 md:py-32 px-4 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24 items-center">
      
      <!-- Text Column (Editorial Style) -->
      <div class="lg:col-span-5 order-2 lg:order-1 relative p-8 md:p-12 bg-white shadow-xl rounded-sm -mt-20 lg:mt-0 z-10">
        <ScrollReveal animation="fade-up" duration={0.8}>
            <div class="flex items-center gap-4 mb-6">
                 <div class="w-8 h-1 bg-sea-blue"></div>
                 <span class="text-sea-blue font-bold uppercase tracking-widest text-xs">Adults Only</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-slate-900 mb-6 leading-tight">
              {t.title}
            </h2>
            <p class="text-lg text-slate-600 leading-relaxed font-normal mb-8">
              {t.desc}
            </p>
            
            <div class="flex gap-12 border-t border-slate-100 pt-8">
                <div>
                    <div class="text-4xl font-heading font-black text-slate-900 mb-1">{t.stat1}</div>
                    <div class="text-xs uppercase tracking-widest text-slate-400 font-bold">{t.stat1Label}</div>
                </div>
                <div>
                    <div class="text-4xl font-heading font-black text-slate-900 mb-1">{t.stat2}</div>
                    <div class="text-xs uppercase tracking-widest text-slate-400 font-bold">{t.stat2Label}</div>
                </div>
            </div>
        </ScrollReveal>
      </div>

      <div class="lg:col-span-7 order-1 lg:order-2">
         <div class="relative pl-0 lg:pl-12">
            <ImageSlider 
               images={[
                 "/images/claercamp/room_priorij.webp",
                 "/images/claercamp/living.webp",
                 "/images/claercamp/exterior.webp",
               ]} 
               id="intro-slider"
               height="h-[400px] md:h-[600px]"
            />
         </div>
      </div>

    </div>
  </div>
</section>
