---
import ScrollReveal from '../ui/ScrollReveal.astro';
import ParallaxImage from '../ui/ParallaxImage.astro';
import ImageSlider from '../ui/ImageSlider.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    title: "Rust & Comfort",
    desc: "De Gaanderij biedt drie unieke gastenkamers, elk met een eigen karakter. Geniet van luxe faciliteiten, een privétuin en een heerlijk ontbijt met streekproducten. Een perfecte uitvalsbasis in Barendrecht.",
    stat1: "9.2",
    stat1Label: "Fantastische Score",
    stat2: "3",
    stat2Label: "Unieke Lofts"
  },
  en: {
    title: "Rest & Comfort",
    desc: "De Gaanderij offers three unique guest rooms, each with its own character. Enjoy luxury facilities, a private garden and a delicious breakfast with local products. A perfect base in Barendrecht.",
    stat1: "9.2",
    stat1Label: "Fantastic Score",
    stat2: "3",
    stat2Label: "Unique Lofts"
  },
  de: {
    title: "Ruhe & Komfort",
    desc: "De Gaanderij bietet drei einzigartige Gästezimmer, jedes mit eigenem Charakter. Genießen Sie luxuriöse Einrichtungen, einen privaten Garten und ein köstliches Frühstück mit regionalen Produkten.",
    stat1: "9.2",
    stat1Label: "Fantastische Punktzahl",
    stat2: "3",
    stat2Label: "Einzigartige Lofts"
  }
};

const t = content[lang] || content.nl;
---

<section class="py-20 md:py-32 px-4 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24 items-center">
      
      <!-- Text Column (Editorial Style) -->
      <div class="lg:col-span-5 order-2 lg:order-1 relative p-8 md:p-12 bg-white shadow-xl rounded-sm -mt-20 lg:mt-0 z-10">
        <ScrollReveal animation="fade-up" duration={0.8}>
            <div class="flex items-center gap-4 mb-6">
                 <div class="w-8 h-1 bg-sea-blue"></div>
                 <span class="text-sea-blue font-bold uppercase tracking-widest text-xs">Since 2024</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-slate-900 mb-6 leading-tight">
              {t.title}
            </h2>
            <p class="text-lg text-slate-600 leading-relaxed font-normal mb-8">
              {t.desc}
            </p>
            
            <div class="flex gap-12 border-t border-slate-100 pt-8">
                <div>
                    <div class="text-4xl font-heading font-black text-slate-900 mb-1">{t.stat1}</div>
                    <div class="text-xs uppercase tracking-widest text-slate-400 font-bold">{t.stat1Label}</div>
                </div>
                <div>
                    <div class="text-4xl font-heading font-black text-slate-900 mb-1">{t.stat2}</div>
                    <div class="text-xs uppercase tracking-widest text-slate-400 font-bold">{t.stat2Label}</div>
                </div>
            </div>
        </ScrollReveal>
      </div>

      <div class="lg:col-span-7 order-1 lg:order-2">
         <div class="relative pl-0 lg:pl-12">
            <ImageSlider 
               images={[
                 "/images/de-gaanderij/loft-blue-02.webp",
                 "/images/de-gaanderij/loft-yellow-01.webp",
                 "/images/de-gaanderij/attic-loft-01.webp",
               ]} 
               id="intro-slider"
               height="h-[400px] md:h-[600px]"
            />
         </div>
      </div>

    </div>
  </div>
</section>
