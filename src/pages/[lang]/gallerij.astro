---
import Layout from '../../layouts/Layout.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const title = {
  nl: "Gallerij",
  en: "Gallery",
  de: "Galerie"
};

const subtitle = {
  nl: "Een impressie van sfeer en omgeving",
  en: "An impression of atmosphere and surroundings",
  de: "Ein Eindruck von Atmosph√§re und Umgebung"
};

const images = [
  "/images/claercamp/rooms/priorij/839a7dd1-7531-4ad2-88d5-a44838798e2a_mw1280.webp",
  "/images/claercamp/rooms/abt/46075d97-c910-4f89-bdeb-e915f4b032d0_mw1280.webp",
  "/images/claercamp/rooms/schiere-monnik/53e43875-d6c6-4830-9670-2af258e3f5db_mw1280.webp",
  "/images/claercamp/rooms/abt/2bb1a5ee-c15c-4ea9-88bd-0ce9ac7d790d_mw1280.webp",
  "/images/claercamp/rooms/priorij/289b6bac-28d2-4b42-8d72-f809f340f352_mw1280.webp",
  "/images/claercamp/rooms/schiere-monnik/c6cf6650-fd85-4d6b-8f1d-454e9d898b11_mw1280.jpeg",
  "/images/claercamp/rooms/abt/9249c4d0-00e0-4d7f-bf5f-f57c4f74e6c0_mw1280.webp",
  "/images/claercamp/rooms/priorij/5d412c30-20a3-4124-b79f-ff200df3bee8_mw1280.webp",
  "/images/claercamp/rooms/priorij/24dde1c6-ace5-4da5-b104-6a753c40eefd_mw1280.webp"
];
---

<Layout title={`Accommodatie Claercamp - ${title[lang]}`} lang={lang}>
  
  <!-- Refined Cinematic Header - Reduced Height -->
  <section class="relative h-[60vh] flex items-center overflow-hidden bg-slate-950">
      <div class="absolute inset-0 opacity-40">
          <img src={images[1]} class="w-full h-full object-cover scale-105" alt="Atmosphere" />
      </div>
      <div class="absolute inset-0 bg-gradient-to-b from-slate-950/60 via-transparent to-stone-50"></div>
      
      <div class="container mx-auto px-6 relative z-10 text-center">
          <ScrollReveal animation="fade-up" duration={1.2}>
              <span class="text-[10px] font-bold tracking-[0.5em] uppercase text-white/60 mb-8 block font-body">Collectie</span>
              <h1 class="font-heading text-6xl md:text-9xl font-light text-white leading-none tracking-tighter italic">
                {title[lang]}
              </h1>
              <div class="w-20 h-[1px] bg-white/20 mx-auto mt-12 mb-12"></div>
              <p class="text-white/60 text-lg font-light leading-relaxed max-w-xl mx-auto italic">
                {subtitle[lang]}
              </p>
          </ScrollReveal>
      </div>

      <div class="absolute bottom-12 left-1/2 -translate-x-1/2 text-white/20 uppercase tracking-[0.3em] text-[9px] font-bold">
          Scroll to explore
      </div>
  </section>

  <div class="bg-stone-50 pt-32 pb-48">
    <div class="max-w-7xl mx-auto px-6">
      
      <!-- Simplified & Refined Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-16">
        
        {images.map((img, index) => {
            // Occasionally make an item wider for style, but keep it cleaner
            const isFeatured = index === 0 || index === 4;
            const spanClass = isFeatured ? 'lg:col-span-2' : '';
            
            return (
                <div class={`${spanClass} group cursor-none`} onclick={`openLightbox(${index})`}>
                    <ScrollReveal animation="fade-up" delay={(index % 3) * 0.1}>
                       <div class="relative overflow-hidden bg-white p-2 shadow-sm border border-stone-100 transition-all duration-700 hover:shadow-2xl">
                          <div class="relative overflow-hidden aspect-[4/5] md:aspect-auto md:h-[60vh]">
                            <img src={img} class="w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-105" alt={`Gallery ${index + 1}`} />
                            <div class="absolute inset-0 bg-slate-950/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                          </div>
                       </div>
                    </ScrollReveal>
                </div>
            );
        })}
      </div>
    </div>
  </div>

  <!-- Reactive Custom Cursor -->
  <div id="gallery-cursor" class="fixed w-20 h-20 bg-white/20 backdrop-blur-md border border-white/30 rounded-full pointer-events-none z-[100] flex items-center justify-center opacity-0 transition-transform duration-[400ms] cubic-bezier(0.23, 1, 0.32, 1) scale-0">
      <span class="text-white text-[9px] font-bold tracking-[0.3em] uppercase">Open</span>
  </div>
</Layout>

<!-- Premium Cinematic Lightbox -->
<dialog id="lightbox" class="backdrop:bg-slate-950 bg-transparent p-0 overflow-hidden w-full h-full max-w-full max-h-full m-0 focus:outline-none">
  <div class="relative w-screen h-screen flex flex-col items-center justify-center group select-none overflow-hidden">
    
    <!-- Background Animated Visual -->
    <div id="lightbox-bg-blur" class="absolute inset-0 opacity-10 blur-[120px] transition-all duration-1000 scale-150 saturate-150"></div>

    <!-- Close Button -->
    <button onclick="closeLightbox()" class="absolute top-12 right-12 text-white/40 hover:text-white z-50 transition-all duration-500 hover:rotate-90">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="0.5" stroke="currentColor" class="w-16 h-16">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Navigation Overlay -->
    <div class="absolute inset-y-0 left-0 w-1/3 z-40 cursor-none" onclick="prevImage(event)"></div>
    <div class="absolute inset-y-0 right-0 w-1/3 z-40 cursor-none" onclick="nextImage(event)"></div>

    <!-- Image Wrapper -->
    <div class="relative z-30 flex flex-col items-center px-6">
        <div class="relative overflow-hidden shadow-[0_60px_120px_-20px_rgba(0,0,0,0.8)]">
            <img id="lightbox-img" src="" alt="Gallery View" class="max-w-full max-h-[75vh] object-contain rounded-[1px] scale-105 opacity-0 transition-all duration-1000 ease-out" />
        </div>
        
        <!-- Minimalist Progress & Counter -->
        <div class="mt-16 flex flex-col items-center gap-8">
            <div class="w-64 h-[2px] bg-white/10 relative overflow-hidden">
                <div id="lightbox-progress" class="absolute inset-y-0 left-0 bg-white/40 transition-all duration-700 ease-out" style="width: 10%"></div>
            </div>
            <div class="flex items-center gap-16 text-white/30 text-[9px] font-bold tracking-[0.4em] uppercase">
                <span id="lightbox-counter">ITEM 01 / 10</span>
                <span>ACCOMMODATIE CLAERCAMP</span>
            </div>
        </div>
    </div>

  </div>
</dialog>

<script define:vars={{ images }}>
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  const lightboxBgBlur = document.getElementById('lightbox-bg-blur');
  const lightboxCounter = document.getElementById('lightbox-counter');
  const lightboxProgress = document.getElementById('lightbox-progress');
  const cursor = document.getElementById('gallery-cursor');
  let currentIndex = 0;

  // Custom Cursor for Gallery
  document.addEventListener('mousemove', (e) => {
    const isOverGallery = e.target.closest('.group.cursor-none');
    
    if (isOverGallery) {
        cursor.style.opacity = '1';
        cursor.style.scale = '1';
        cursor.style.transform = `translate(${e.clientX - 40}px, ${e.clientY - 40}px)`;
    } else {
        cursor.style.opacity = '0';
        cursor.style.scale = '0';
    }
  });

  window.openLightbox = (index) => {
    currentIndex = index;
    updateImage();
    lightbox.showModal();
    requestAnimationFrame(() => {
      lightboxImg.classList.remove('scale-105', 'opacity-0');
      lightboxImg.classList.add('scale-100', 'opacity-100');
    });
    document.body.style.overflow = 'hidden'; 
  };

  window.closeLightbox = () => {
    lightboxImg.classList.remove('scale-100', 'opacity-100');
    lightboxImg.classList.add('scale-105', 'opacity-0');
    setTimeout(() => {
        lightbox.close();
        document.body.style.overflow = '';
    }, 500);
  };

  window.updateImage = () => {
    lightboxImg.style.opacity = '0.2';
    lightboxImg.style.scale = '0.98';
    
    setTimeout(() => {
        lightboxImg.src = images[currentIndex];
        lightboxBgBlur.style.backgroundImage = `url(${images[currentIndex]})`;
        
        const count = currentIndex + 1;
        lightboxCounter.textContent = `ITEM ${count.toString().padStart(2, '0')} / ${images.length.toString().padStart(2, '0')}`;
        lightboxProgress.style.width = `${(count / images.length) * 100}%`;
        
        lightboxImg.onload = () => {
            lightboxImg.style.opacity = '1';
            lightboxImg.style.scale = '1';
        };
    }, 400);
  };

  window.nextImage = (e) => {
    if(e) e.stopPropagation();
    currentIndex = (currentIndex + 1) % images.length;
    updateImage();
  };

  window.prevImage = (e) => {
    if(e) e.stopPropagation();
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    updateImage();
  };

  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox || e.target.classList.contains('group')) {
        closeLightbox();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (!lightbox.open) return;
    if (e.key === 'ArrowRight') nextImage();
    if (e.key === 'ArrowLeft') prevImage();
    if (e.key === 'Escape') closeLightbox();
  });
</script>

<style>
    /* Custom utility for bento grid verticality */
    @media (min-width: 768px) {
        .md\:row-span-2 {
            grid-row: span 2 / span 2;
        }
    }
    
    /* Smooth transition for images */
    img {
        will-change: transform, opacity;
    }
    
    /* Animation for bouncing line */
    @keyframes bounce {
        0%, 100% { transform: translate(-50%, 0); opacity: 0.2; }
        50% { transform: translate(-50%, 20px); opacity: 0.6; }
    }
    .animate-bounce {
        animation: bounce 2s infinite ease-in-out;
    }
</style>
