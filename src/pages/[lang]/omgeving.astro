---
import Layout from '../../layouts/Layout.astro';
import ParallaxImage from '../../components/ui/ParallaxImage.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const content = {
  nl: {
    title: "Omgeving",
    headline: "Ontdek Friesland & Dokkum",
    intro: "Gelegen in het prachtige Friese landschap, biedt Accommodatie Claercamp de perfecte uitvalsbasis voor natuur, cultuur en de historische Elfstedenstad Dokkum.",
    labels: {
      highlights: "Highlights",
      dining: "Eten & Drinken",
      sights: "Bezienswaardigheden"
    },
    spots: [
      { title: "Dokkum", desc: "Historische vestingstad en een van de Friese Elfsteden. Bekend om de grachten, bolwerken en Bonifatius." },
      { title: "Nationaal Park Lauwersmeer", desc: "Prachtig natuurgebied waar zoet en zout water samenkomen. Ideaal voor wandelen, fietsen en vogels spotten." },
      { title: "Waddeneilanden", desc: "De veerboot naar Ameland (Holwerd) of Schiermonnikoog (Lauwersoog) is dichtbij." },
      { title: "Leeuwarden", desc: "Culturele Hoofdstad (2018) met musea, winkels en horeca, op slechts 20 minuten rijden." }
    ],
    dining: [
      { name: "Herberg de Waard", desc: "Gezellig dineren in Rinsumageest." },
      { name: "KB Food & Drinks (Dokkum)", desc: "Heerlijk eten in een sfeervol pakhuis." },
      { name: "Proeflokaal 't Raedhûs", desc: "Voor de fijnproevers in Dokkum." },
      { name: "De Posthoorn", desc: "Gezellig eetcafé in Dokkum." }
    ],
    sights: [
      { name: "Bonifatiuskapel", desc: "Bedevaartsplaats in Dokkum." },
      { name: "Admiraliteitshuis", desc: "Museum over de historie van Dokkum en de Admiraliteit." },
      { name: "De Klaarkamp", desc: "Voormalige kloosterlocatie in Rinsumageest, rijk aan archeologie." },
      { name: "Kerken van Rinsumageest", desc: "De Alexanderkerk (met Romaanse crypte) is een bezoek waard." }
    ]
  },
  en: {
    title: "Surroundings",
    headline: "Discover Friesland & Dokkum",
    intro: "Located in the beautiful Frisian landscape, Accommodatie Claercamp offers the perfect base for nature, culture, and the historic Eleven Cities town of Dokkum.",
    labels: {
      highlights: "Highlights",
      dining: "Dining & Drinks",
      sights: "Sights"
    },
    spots: [
      { title: "Dokkum", desc: "Historic fortified city and one of the Frisian Eleven Cities. Known for its canals, ramparts, and Boniface." },
      { title: "Lauwersmeer National Park", desc: "Beautiful nature reserve where fresh and salt water meet. Ideal for walking, cycling, and bird watching." },
      { title: "Wadden Islands", desc: "The ferry to Ameland (Holwerd) or Schiermonnikoog (Lauwersoog) is nearby." },
      { title: "Leeuwarden", desc: "Cultural Capital (2018) with museums, shops, and restaurants, just a 20-minute drive away." }
    ],
    dining: [
      { name: "Herberg de Waard", desc: "Cozy dining in Rinsumageest." },
      { name: "KB Food & Drinks (Dokkum)", desc: "Delicious food in an atmospheric warehouse." },
      { name: "Proeflokaal 't Raedhûs", desc: "For gourmets in Dokkum." },
      { name: "De Posthoorn", desc: "Cozy eatery in Dokkum." }
    ],
    sights: [
      { name: "Bonifatius Chapel", desc: "Pilgrimage site in Dokkum." },
      { name: "Admiraliteitshuis", desc: "Museum about the history of Dokkum and the Admiralty." },
      { name: "De Klaarkamp", desc: "Former monastery site in Rinsumageest, rich in archaeology." },
      { name: "Churches of Rinsumageest", desc: "The Alexander Church (with Romanesque crypt) is worth a visit." }
    ]
  },
  de: {
    title: "Umgebung",
    headline: "Entdecken Sie Friesland & Dokkum",
    intro: "In der wunderschönen friesischen Landschaft gelegen, bietet Accommodatie Claercamp den perfekten Ausgangspunkt für Natur, Kultur und die historische Elfstedenstadt Dokkum.",
    labels: {
      highlights: "Highlights",
      dining: "Essen & Trinken",
      sights: "Sehenswürdigkeiten"
    },
    spots: [
      { title: "Dokkum", desc: "Historische Festungsstadt und eine der friesischen elf Städte. Bekannt für Grachten, Bollwerke und Bonifatius." },
      { title: "Nationalpark Lauwersmeer", desc: "Schönes Naturschutzgebiet, in dem Süß- und Salzwasser aufeinandertreffen. Ideal zum Wandern, Radfahren und Vogelbeobachten." },
      { title: "Watteninseln", desc: "Die Fähre nach Ameland (Holwerd) oder Schiermonnikoog (Lauwersoog) ist in der Nähe." },
      { title: "Leeuwarden", desc: "Kulturhauptstadt (2018) mit Museen, Geschäften und Restaurants, nur 20 Autominuten entfernt." }
    ],
    dining: [
      { name: "Herberg de Waard", desc: "Gemütliches Abendessen in Rinsumageest." },
      { name: "KB Food & Drinks (Dokkum)", desc: "Leckeres Essen in einem stimmungsvollen Lagerhaus." },
      { name: "Proeflokaal 't Raedhûs", desc: "Für Feinschmecker in Dokkum." },
      { name: "De Posthoorn", desc: "Gemütliches Lokal in Dokkum." }
    ],
    sights: [
      { name: "Bonifatius-Kapelle", desc: "Wallfahrtsort in Dokkum." },
      { name: "Admiraliteitshuis", desc: "Museum über die Geschichte von Dokkum und der Admiralität." },
      { name: "De Klaarkamp", desc: "Ehemaliger Klosterstandort in Rinsumageest, reich an Archäologie." },
      { name: "Kirchen von Rinsumageest", desc: "Die Alexanderkirche (mit romanischer Krypta) ist einen Besuch wert." }
    ]
  }
};

const t = content[lang] || content.nl;

const sections = [
    {
        id: 'highlights',
        label: t.labels.highlights,
        items: t.spots,
        image: '/images/claercamp/exterior.webp', 
        align: 'left'
    },
    {
        id: 'dining',
        label: t.labels.dining,
        items: t.dining.map(i => ({ title: i.name, desc: i.desc })),
        image: '/images/claercamp/living.webp', 
        align: 'right'
    },
    {
        id: 'sights',
        label: t.labels.sights,
        items: t.sights.map(i => ({ title: i.name, desc: i.desc })),
        image: '/images/claercamp/garden.webp', 
        align: 'left'
    }
];
---

<Layout title={`Accommodatie Claercamp - ${t.title}`} lang={lang}>
  
  <!-- Hero -->
  <div class="relative py-32 bg-stone-50 text-center overflow-hidden">
     <div class="relative z-10 max-w-4xl mx-auto px-4">
        <ScrollReveal animation="fade-up">
            <h1 class="font-heading text-5xl md:text-7xl font-bold mb-8 text-sea-blue tracking-tight">{t.headline}</h1>
            <p class="text-xl text-slate-600 leading-relaxed font-light">{t.intro}</p>
        </ScrollReveal>
     </div>
     <!-- Background decoration -->
      <div class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none">
          <div class="absolute top-10 right-10 w-64 h-64 rounded-full bg-sea-blue blur-3xl"></div>
          <div class="absolute bottom-10 left-10 w-96 h-96 rounded-full bg-slate-900 blur-3xl"></div>
      </div>
  </div>

  <div class="pb-32">
    {sections.map((section, index) => (
        <section class="py-20 md:py-32 border-b border-slate-100 last:border-0 relative">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class={`flex flex-col ${section.align === 'right' ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-16 lg:gap-24 items-start`}>
                    
                    <!-- Visual Side (Sticky) -->
                    <div class="w-full lg:w-5/12 lg:sticky lg:top-32 self-start">
                        <ScrollReveal animation={section.align === 'right' ? 'slide-right' : 'slide-left'} duration={1}>
                            <div class="relative aspect-[3/4] rounded-sm overflow-hidden shadow-2xl group">
                                <ParallaxImage 
                                    src={section.image} 
                                    alt={section.label} 
                                    class="h-full w-full object-cover transition-transform duration-1000 group-hover:scale-105"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
                                <div class="absolute bottom-8 left-8">
                                    <h2 class="text-4xl font-heading font-bold text-white mb-2">{section.label}</h2>
                                    <div class="w-12 h-1 bg-white/50"></div>
                                </div>
                            </div>
                        </ScrollReveal>
                    </div>

                    <!-- Content Side (List) -->
                    <div class="w-full lg:w-7/12 pt-8">
                        <div class="grid grid-cols-1 gap-12">
                            {section.items.map((item, i) => (
                                <ScrollReveal animation="fade-up" delay={i * 0.1}>
                                    <div class="group border-l-2 border-slate-100 pl-8 hover:border-sea-blue transition-colors duration-300">
                                        <h3 class="text-2xl font-heading font-bold text-slate-900 mb-3 group-hover:text-sea-blue transition-colors">
                                            {item.title}
                                        </h3>
                                        <p class="text-lg text-slate-600 font-light leading-relaxed">
                                            {item.desc}
                                        </p>
                                    </div>
                                </ScrollReveal>
                            ))}
                        </div>
                    </div>

                </div>
            </div>
        </section>
    ))}
  </div>

</Layout>
