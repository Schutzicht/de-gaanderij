---
import Layout from '../../layouts/Layout.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const content = {
  nl: {
    title: "Contact",
    subtitle: "Wij horen graag van je",
    desc: "Wilt u een reservering aanvragen, of heeft u vragen over uw verblijf bij B&B De Gaanderij? Wij staan klaar om u te helpen.",
    name: "Uw Naam",
    email: "E-mailadres",
    message: "Uw bericht",
    send: "Verstuur Bericht",
    addressTitle: "Locatie",
    address: "Barendrecht, Zuid-Holland",
    contactTitle: "Direct Contact",
    phone: "",
    emailContact: ""
  },
  en: {
    title: "Contact",
    subtitle: "We'd love to hear from you",
    desc: "Would you like to request a reservation, or do you have questions about your stay at B&B De Gaanderij? We are here to help.",
    name: "Your Name",
    email: "Email Address",
    message: "Your Message",
    send: "Send Message",
    addressTitle: "Location",
    address: "Barendrecht, The Netherlands",
    contactTitle: "Direct Contact",
    phone: "",
    emailContact: ""
  },
  de: {
    title: "Kontakt",
    subtitle: "Wir hören gerne von Ihnen",
    desc: "Möchten Sie eine Reservierung anfragen, oder haben Sie Fragen zu Ihrem Aufenthalt im B&B De Gaanderij? Wir sind für Sie da.",
    name: "Ihr Name",
    email: "E-Mail-Adresse",
    message: "Ihre Nachricht",
    send: "Nachricht Senden",
    addressTitle: "Standort",
    address: "Barendrecht, Niederlande",
    contactTitle: "Direkter Kontakt",
    phone: "",
    emailContact: ""
  }
};

const t = content[lang] || content.nl;
---

<Layout title={`B&B De Gaanderij - ${t.title}`} lang={lang}>
  <div class="relative min-h-screen bg-stone-50 pt-32 pb-32 overflow-hidden selection:bg-sea-blue/10">
    <!-- Sophisticated Background Pattern -->
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none" 
         style="background-image: radial-gradient(#0e4c92 0.5px, transparent 0.5px); background-size: 24px 24px;"></div>
    
    <!-- Large Decorative Blurs -->
    <div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-sea-blue/5 blur-[120px] rounded-full"></div>
    <div class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-stone-200/40 blur-[100px] rounded-full"></div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
      
      <!-- Header Section: More Minimalist -->
      <header class="max-w-4xl mb-24">
        <ScrollReveal animation="fade-up" duration={1.2}>
           <span class="text-[10px] font-bold tracking-[0.4em] uppercase text-sea-blue/60 mb-6 block">{t.subtitle}</span>
           <h1 class="font-heading text-6xl md:text-8xl font-light text-slate-900 mb-10 leading-[1.1] tracking-tight">
             {t.title}
           </h1>
           <div class="w-20 h-[1px] bg-sea-blue/20 mb-10"></div>
           <p class="text-slate-500 text-xl md:text-2xl font-light leading-relaxed max-w-2xl">
             {t.desc}
           </p>
        </ScrollReveal>
      </header>

      <div class="grid lg:grid-cols-12 gap-16 lg:gap-24 items-start">
        
        <!-- Left Column: Contact Info - Elevated Glassmorphism -->
        <div class="lg:col-span-4 space-y-16">
            <ScrollReveal animation="slide-left" duration={1.2} delay={0.2}>
                <div class="space-y-12">
                    <!-- Location -->
                    <div class="group">
                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-10 h-10 rounded-full border border-sea-blue/10 flex items-center justify-center text-sea-blue transition-transform duration-500 group-hover:scale-110">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
                            </div>
                            <h3 class="font-heading text-sm uppercase tracking-widest text-slate-400 font-medium">{t.addressTitle}</h3>
                        </div>
                        <p class="text-slate-800 text-lg font-light leading-relaxed pl-14">{t.address}</p>
                    </div>

                    <!-- Direct Contact -->
                    <div class="group">
                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-10 h-10 rounded-full border border-sea-blue/10 flex items-center justify-center text-sea-blue transition-transform duration-500 group-hover:scale-110">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                            </div>
                            <h3 class="font-heading text-sm uppercase tracking-widest text-slate-400 font-medium">{t.contactTitle}</h3>
                        </div>
                        <div class="space-y-2 pl-14">
                            <p class="text-slate-800 text-lg font-light">{t.phone}</p>
                            <p class="text-slate-800 text-lg font-light transition-colors hover:text-sea-blue cursor-pointer">{t.emailContact}</p>
                        </div>
                    </div>
                </div>
            </ScrollReveal>


        </div>

        <!-- Right Column: Form - Clean & Minimal -->
        <div class="lg:col-span-8">
            <ScrollReveal animation="slide-right" duration={1.2} delay={0.3}>
                <div class="bg-white/40 backdrop-blur-xl p-8 md:p-20 rounded-sm border border-white/60 shadow-[0_32px_64px_-16px_rgba(0,0,0,0.05)]">
                    <form name="contact" method="POST" data-netlify="true" class="space-y-12">
                        <div class="grid md:grid-cols-2 gap-12">
                            <!-- Name -->
                            <div class="relative group">
                                <input type="text" id="name" name="name" required placeholder=" " 
                                       class="peer w-full bg-transparent border-b border-stone-200 py-4 text-slate-800 placeholder-transparent focus:outline-none focus:border-sea-blue transition-all duration-300" />
                                <label for="name" 
                                       class="absolute left-0 -top-3.5 text-[10px] uppercase tracking-[0.2em] font-semibold text-stone-400 transition-all 
                                              peer-placeholder-shown:text-sm peer-placeholder-shown:tracking-normal peer-placeholder-shown:font-normal peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-4 
                                              peer-focus:-top-3.5 peer-focus:text-[10px] peer-focus:tracking-[0.2em] peer-focus:font-semibold peer-focus:text-sea-blue">
                                    {t.name}
                                </label>
                            </div>

                            <!-- Email -->
                            <div class="relative group">
                                <input type="email" id="email" name="email" required placeholder=" " 
                                       class="peer w-full bg-transparent border-b border-stone-200 py-4 text-slate-800 placeholder-transparent focus:outline-none focus:border-sea-blue transition-all duration-300" />
                                <label for="email" 
                                       class="absolute left-0 -top-3.5 text-[10px] uppercase tracking-[0.2em] font-semibold text-stone-400 transition-all 
                                              peer-placeholder-shown:text-sm peer-placeholder-shown:tracking-normal peer-placeholder-shown:font-normal peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-4 
                                              peer-focus:-top-3.5 peer-focus:text-[10px] peer-focus:tracking-[0.2em] peer-focus:font-semibold peer-focus:text-sea-blue">
                                    {t.email}
                                </label>
                            </div>
                        </div>

                        <!-- Message -->
                        <div class="relative group">
                            <textarea id="message" name="message" rows="4" required placeholder=" " 
                                      class="peer w-full bg-transparent border-b border-stone-200 py-4 text-slate-800 placeholder-transparent focus:outline-none focus:border-sea-blue transition-all duration-300 resize-none"></textarea>
                            <label for="message" 
                                   class="absolute left-0 -top-3.5 text-[10px] uppercase tracking-[0.2em] font-semibold text-stone-400 transition-all 
                                          peer-placeholder-shown:text-sm peer-placeholder-shown:tracking-normal peer-placeholder-shown:font-normal peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-4 
                                          peer-focus:-top-3.5 peer-focus:text-[10px] peer-focus:tracking-[0.2em] peer-focus:font-semibold peer-focus:text-sea-blue">
                                {t.message}
                            </label>
                        </div>

                        <!-- Submit Button: Highly Refined -->
                        <div class="pt-8">
                            <button type="submit" class="group relative inline-flex items-center gap-8 px-10 py-5 bg-slate-900 text-white overflow-hidden rounded-full transition-all hover:bg-sea-blue shadow-xl">
                                <span class="relative z-10 font-bold tracking-[0.3em] uppercase text-[10px]">{t.send}</span>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 transition-transform duration-500 group-hover:translate-x-2">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </ScrollReveal>
        </div>

      </div>
    </div>
  </div>
</Layout>
